@page "/counter"

@implements IDisposable

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount" disabled="@(cts != null)">Start</button>
<button class="btn btn-primary" @onclick="ToggleCount" disabled="@(cts == null)">Toggle</button>
<button class="btn btn-primary" @onclick="StopCount" disabled="@(cts == null)">Stop</button>
<button class="btn btn-primary" @onclick="ResetCount">Reset</button>

